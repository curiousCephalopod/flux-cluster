---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: &app onepassword
  namespace: flux-system
spec:
  targetNamespace: onepassword
  commonMetadata:
    labels:
      app.kubernetes.io/name: *app
  path: ./kubernetes/apps/onepassword/app
  prune: true
  sourceRef:
    kind: GitRepository
    name: {{ cluster.name }}
  wait: false
  interval: 30m
  retryInterval: 1m
  timeout: 5m
