---
apiVersion: v1
kind: Service
metadata:
  name: postgres-lb
  labels:
    expose-bgp: "true"
    coredns.io/hostname: postgres.${CLUSTER_DOMAIN}
spec:
  type: LoadBalancer
  ports:
    - name: postgres
      port: 5432
      protocol: TCP
      targetPort: 5432
  selector:
    cnpg.io/cluster: pg-cluster
    role: primary
